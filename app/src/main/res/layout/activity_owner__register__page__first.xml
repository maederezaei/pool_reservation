<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.project.poolreservation.activities.Owner_Register_Page_First">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="92dp"
        android:textSize="18sp"
        android:text="نام خود را وارد کنید"
        android:textColor="#545050"
        android:paddingRight="20dp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/name_edittext"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="نام"
        android:layout_marginTop="120dp" />
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="180dp"
        android:textSize="18sp"
        android:text="نام خوانوادگی خود را وارد کنید"
        android:textColor="#545050"
        android:paddingRight="20dp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/family_edittext"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint=" نام خوانوادگی"
        android:layout_marginTop="208dp" />





    <Button
        android:id="@+id/button"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonbordershadow"
        android:layout_marginTop="320dp"
        android:clickable="true"
        android:text="تایید"
        android:textSize="20sp"
        android:textColor="#ffffffff"
        android:shadowColor="@color/colorPrimaryDark"
        />


</RelativeLayout>